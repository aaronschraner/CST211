/********************************************************************************
 * TreeNode<T>* find(T value);
 * 	Purpose: 
 * 		Find the first node in the tree containing the specified value
 * 	
 * 	Entry: 
 * 		value: the item to be searched for
 * 	
 * 	Exit: 
 * 		Returns a pointer to the node containing that value
 * 		(NULLPTR if not found)
 * 	
 ********************************************************************************/
